# ── Gemini ────────────────────────────────────────────────────────────────────
GEMINI_API_KEY=your_gemini_api_key_here

# ── LiveKit ───────────────────────────────────────────────────────────────────
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ── Database ──────────────────────────────────────────────────────────────────
# Use 'postgres' as host when running via Docker Compose, 'localhost' for local dev
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/ai_intrvwr

# ── Redis ─────────────────────────────────────────────────────────────────────
# Use 'redis' as host when running via Docker Compose, 'localhost' for local dev
REDIS_URL=redis://redis:6379/0

# ── URLs ──────────────────────────────────────────────────────────────────────
BACKEND_URL=http://backend:8000        # used by agent to call webhook (Docker Compose)
FRONTEND_URL=http://localhost:3000     # used to generate candidate invite links
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000  # used by browser to call backend

# ── Auth ──────────────────────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=replace_with_a_random_64char_hex_string

# ── Langfuse observability (optional) ─────────────────────────────────────────
# Leave blank to disable tracing entirely
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com
